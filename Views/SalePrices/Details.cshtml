@model Inventory.ViewModels.SalePriceDetailViewModel

@{
    ViewBag.Title = "Details";
}

<div class="container mt-2">
    <div class="card mb-3">
        <div class="card-body">
            <h4 class="card-title">Sale Price Information</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <label>Category:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.SalePrice.Category.Name)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Product:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.SalePrice.Product.Name)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Price:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.SalePrice.Price)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Is Active:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.SalePrice.IsActive)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Is Deleted:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.SalePrice.IsDeleted)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Created Date:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.SalePrice.CreatedDate)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Created User:</label>
                </div>
                <div class="col-md-8">
                    <p>@Model.CreatedUserName</p>
                </div>
            </div>
            @if (Model.SalePrice.UpdatedDate != null)
            {
                <div class="row">
                    <div class="col-md-4">
                        <label>Updated Date:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Html.DisplayFor(model => model.SalePrice.UpdatedDate)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Updated User:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Model.UpdatedUserName</p>
                    </div>
                </div>
            }
            @if (Model.SalePrice.DeletedDate != null)
            {
                <div class="row">
                    <div class="col-md-4">
                        <label>Deleted Date:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Html.DisplayFor(model => model.SalePrice.DeletedDate)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Deleted User:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Model.DeletedUserName</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.SalePrice.ID }, new { @class = "btn btn-dark" }) |
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-dark" })
    </p>
</div>
