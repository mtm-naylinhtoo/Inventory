@model Inventory.ViewModels.UserDetailViewModel
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-body">
                <h4 class="card-title">User Information</h4>
                <hr />
                <div class="row">
                    <div class="col-md-4">
                        <label>First Name:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Html.DisplayFor(model => model.User.FirstName)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Last Name:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Html.DisplayFor(model => model.User.LastName)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Email:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Html.DisplayFor(model => model.User.Email)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Mobile:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Html.DisplayFor(model => model.User.Mobile)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Date of Birth:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Html.DisplayFor(model => model.User.DOB)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Role:</label>
                    </div>
                    <div class="col-md-8">
                        <p>
                            @{
                                if (Model.User.Role == 0)
                                {
                                    <text>Admin</text>;
                                }
                                else if (Model.User.Role == 1)
                                {
                                    <text>Sales</text>;
                                }
                            }
                        </p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Is Active:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Html.DisplayFor(model => model.User.IsActive)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Is Deleted:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Html.DisplayFor(model => model.User.IsDeleted)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Created Date:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Html.DisplayFor(model => model.User.CreatedDate)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Created User:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Model.CreatedUserName</p>
                    </div>
                </div>
                @if (Model.User.UpdatedDate != null)
                {
                    <div class="row">
                        <div class="col-md-4">
                            <label>Updated Date:</label>
                        </div>
                        <div class="col-md-8">
                            <p>@Html.DisplayFor(model => model.User.UpdatedDate)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label>Updated User:</label>
                        </div>
                        <div class="col-md-8">
                            <p>@Model.UpdatedUserName</p>
                        </div>
                    </div>
                }
                @if (Model.User.DeletedDate != null)
                {
                    <div class="row">
                        <div class="col-md-4">
                            <label>Deleted Date:</label>
                        </div>
                        <div class="col-md-8">
                            <p>@Html.DisplayFor(model => model.User.DeletedDate)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label>Deleted User ID:</label>
                        </div>
                        <div class="col-md-8">
                            <p>@Model.DeletedUserName</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.User.Id }, new { @class = "btn btn-dark" }) |
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-dark" })
</p>
