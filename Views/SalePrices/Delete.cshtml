@model Inventory.Models.SalePrice

@{
    ViewBag.Title = "Delete";
}

<div class="container mt-2">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Are you sure you want to delete this sale price?</h4>
            <hr />
            <div class="row">
                <div class="col-md-3">
                    <label>Category:</label>
                </div>
                <div class="col-md-9">
                    <p>@Html.DisplayFor(model => model.Category.Name)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Product:</label>
                </div>
                <div class="col-md-9">
                    <p>@Html.DisplayFor(model => model.Product.Name)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Price:</label>
                </div>
                <div class="col-md-9">
                    <p>@Html.DisplayFor(model => model.Price)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Is Active:</label>
                </div>
                <div class="col-md-9">
                    <p>@Html.DisplayFor(model => model.IsActive)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Is Deleted:</label>
                </div>
                <div class="col-md-9">
                    <p>@Html.DisplayFor(model => model.IsDeleted)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <label>Created Date:</label>
                </div>
                <div class="col-md-9">
                    <p>@Html.DisplayFor(model => model.CreatedDate)</p>
                </div>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-dark" })
                </div>
            }
        </div>
    </div>
</div>
