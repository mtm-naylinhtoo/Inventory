@model Inventory.ViewModels.CustomerDetailViewModel

@{
    ViewBag.Title = "Details";
}

<div class="container mt-2">
    <div class="card mb-3">
        <div class="card-body">
            <h4 class="card-title">Customer Information</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <label>State:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.Customer.State.Name)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>City:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.Customer.City.Name)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Township:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.Customer.Township.Name)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Code:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.Customer.Code)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Name:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.Customer.Name)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Address:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.Customer.Address)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Phone:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.Customer.Mobile)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Is Active:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.Customer.IsActive)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Is Deleted:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.Customer.IsDeleted)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Created Date:</label>
                </div>
                <div class="col-md-8">
                    <p>@Html.DisplayFor(model => model.Customer.CreatedDate)</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <label>Created User:</label>
                </div>
                <div class="col-md-8">
                    <p>@Model.CreatedUserName</p>
                </div>
            </div>
            @if (Model.Customer.UpdatedDate != null)
            {
                <div class="row">
                    <div class="col-md-4">
                        <label>Updated Date:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Html.DisplayFor(model => model.Customer.UpdatedDate)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Updated User:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Model.UpdatedUserName</p>
                    </div>
                </div>
            }
            @if (Model.Customer.DeletedDate != null)
            {
                <div class="row">
                    <div class="col-md-4">
                        <label>Deleted Date:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Html.DisplayFor(model => model.Customer.DeletedDate)</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <label>Deleted User:</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Model.DeletedUserName</p>
                    </div>
                </div>
            }
        </div>
    </div>

    <p>
        @Html.ActionLink("Edit", "Edit", new { id = Model.Customer.Id }, new { @class = "btn btn-dark" }) |
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-dark" })
    </p>
</div>
