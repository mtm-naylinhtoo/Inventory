@model Inventory.Models.User

@using (Html.BeginForm())
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title mb-4">Login</h2>

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <p class="text-danger mt-2">@ViewBag.ErrorMessage</p>
                        }

                        <div class="form-group row mt-2">
                            <div class="col-md-12">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                            </div>
                        </div>

                        <div class="form-group row mt-4">
                            <div class="col-md-12">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
                            </div>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-12">
                                <input type="submit" value="Login" class="btn btn-dark btn-block mt-4" />
                                @Html.ActionLink("Register", "Register", "Users", new { area = "" }, new { @class = "btn btn-outline-dark btn-block mt-4" })
                            </div>  
                            <div class="col-md-12 mt-2">
                                @Html.ActionLink("Forgot Password?", "ForgotPassword", "Users", null, new { @class = "px-0 btn btn-link" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
